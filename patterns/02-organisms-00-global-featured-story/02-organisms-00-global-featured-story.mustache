{{#featured_story}}
&lt;div class=&quot;featured-story&quot;&gt;
  {{#content}}
  &lt;a class=&quot;featured-story__link featured-story__media&quot; href=&quot;{{url}}&quot;&gt;
    {{#media}}
    &lt;img class=&quot;featured-story__img&quot; src=&quot;{{src}}&quot; alt=&quot;{{alt}}&quot;&gt;
    {{/media}}
    {{#cta}}
    &lt;div class=&quot;btn btn-primary&quot;&gt;{{cta}}&lt;/div&gt;
    {{/cta}}
  &lt;/a&gt;
  &lt;div class=&quot;featured-story__content&quot;&gt;
    &lt;div class=&quot;featured-story__content-inner&quot;&gt;
      {{#category}}
      &lt;a class=&quot;featured-story__category&quot; href=&quot;{{url}}&quot;&gt;{{text}}&lt;/a&gt;
      {{/category}}
      &lt;a class=&quot;featured-story__title&quot; href=&quot;{{url}}&quot;&gt;{{title}}&lt;/a&gt;
      &lt;div class=&quot;featured-story__text&quot;&gt;
        {{teaser}}
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/div&gt;
  {{/content}}
&lt;/div&gt;
{{/featured_story}}