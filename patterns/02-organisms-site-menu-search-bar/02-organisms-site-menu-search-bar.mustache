{{#search_bar}}
&lt;div class=&quot;search-bar
            {{#in_site_header?}}search-bar--in-site-header{{/in_site_header?}}
            {{#in_side_nav?}}search-bar--in-side-nav{{/in_side_nav?}}
            &quot;&gt;
  &lt;div class=&quot;search-bar__wrap&quot;&gt;
    &lt;form class=&quot;form-inline search-form&quot; action=&quot;{{ form_action }}&quot;&gt;
      &lt;input class=&quot;form-control search-bar__input&quot; type=&quot;text&quot; placeholder=&quot;Search&quot;&gt;
      &lt;button class=&quot;btn form-btn link-with-arrow link-with-arrow--transparent search-bar__btn&quot;&gt;
        Search
      &lt;/button&gt;
    &lt;/form&gt;

    {{#in_site_header?}}
    &lt;div class=&quot;search-bar__close show-at-md&quot;&gt;
      &lt;svg class=&quot;icon icon-close search-bar__close-icon&quot;&gt;
        &lt;use xmlns:xlink=&quot;http://www.w3.org/1999/xlink&quot; xlink:href=&quot;{{ svg_sprite_path  }}#icon-close&quot;&gt;&lt;/use&gt;
      &lt;/svg&gt;
    &lt;/div&gt;
    {{/in_site_header?}}

  &lt;/div&gt;
&lt;/div&gt;
{{/search_bar}}
